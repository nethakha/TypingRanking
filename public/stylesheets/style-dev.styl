*
    margin 0
    padding 0

body
    color #fff
    background #000000
    background -webkit-linear-gradient(to top, #434343, #000000)
    background linear-gradient(to top, #434343, #000000)
    .c_back
        display block
        position fixed
        top 0
        left 0
        width 100%
        height 100%
        z-index 0
    .container
        z-index 1
        position relative
        a
            color #fff
        a:hover
            color #ccc
        h1
            text-align center
            line-height 2em
        input
            background rgba(255, 255, 255, .3)
            padding .2em .2em
            border 1px solid rgba(255, 255, 255, .5)
            border-radius 3px
            color #fff
            &[type="submit"]
                width 4em
        .box.Notify
            width 500px
            margin 1em auto
            text-align center
            border 2px solid red
            padding 1em
            background rgba(255, 0, 0, .3)
        .flex
            display flex
            flex-flow row wrap
            width 1200px
            margin 0 auto
            padding-bottom .5em
            border 1px solid rgba(255, 255, 255, .3)
            justify-content center
            .box
                overflow hidden
                min-width 150px
                display block
                padding 0 1em 1em
                border 1px solid rgba(255, 255, 255, .5)
                border-radius 3px
                margin .5em .5em 0 0
                position relative
                transition .1s all ease
                &:hover
                    background rgba(0, 0, 0, .5)




                &.DataPost
                    margin-right 0
                h3
                    margin 1em auto
                hr
                    margin 1em 0
                    border 1px solid #ccc
                ul
                    padding-left 1em

                &.DataDelete
                    flex-glow 1
                    //width 200px
                    p
                        font-size .9em
                        padding .3em 0
                    input
                        margin auto auto .5em .5em
                        &[type="text"]
                            width 6em
                &.JSON
                    width 400px
                    ol
                        overflow-x scroll
                        font-size .8em
                        padding 1em 0 1em 2em
                        margin 1em 0
                        background #333
                        border-radius 5px

                &.DataPost
                    width 450px
                    dl
                        dt
                            float left
                            width 4em
                            padding-left 1em
                        dd
                            i
                                margin-left 1em
